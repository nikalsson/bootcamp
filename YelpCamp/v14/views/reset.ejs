<% include ./partials/header %>

<div class='row'>
    <h1 style='text-align: center'>Reset password</h1>
    <div style='width: 30%; margin: 25px auto;'>
        <form action='/reset/<%= token %>' method='POST'>
            <div class='form-group'>
                <input class='form-control' name='password' type='password' placeholder='New password'>
            </div>
            <div class='form-group'>
                <input class='form-control' name='confirm' type='password' placeholder='Confirm new password'>
            </div>
            <div class='form-group'>
                <input type='submit' class='btn btn-lg btn-primary btn-block' value='Update password'>
            </div>
        </form>
        <a href='/campgrounds'>Go back</a>
    </div>
</div>

<% include ./partials/footer %>