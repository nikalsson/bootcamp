<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Leave a new comment to <%= campground.name %>  </h1>
        <div style="width: 50%; margin: 25px auto; ">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="TEXT" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form> 
            <a href="/campgrounds/<%= campground._id %>">Go back to campground <%= campground.name %></a>
        </div>
    </div>
</div>

<% include ../partials/footer %>